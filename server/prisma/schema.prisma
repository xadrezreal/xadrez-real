generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  FREEMIUM
  PREMIUM
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      Role     @default(FREEMIUM)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
